<h1>Welcome to my blog</h1>
<% @blog_posts.each do |blog_post| %>
<div>
    <% if blog_post.draft? %>
    <div>Draft</div>
    <% elsif blog_post.scheduled? %>
    <div>Scheduled</div>
    <% end %>
    <h2>
        <%= link_to blog_post.title, blog_post %>
    </h2>
    <%= blog_post.content %>


</div>
<% end %>

